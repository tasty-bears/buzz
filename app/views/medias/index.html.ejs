<div class="hero-unit">
  <h2>All Medias</h2>
  <%- linkTo('Create a new Media', addMediaPath, {class: 'btn pull-right'}); %>
</div>

<div id="medias-list">
<% if (medias) { %>
<% for (var i = 0, ii = medias.length; i < ii; i++) { %>
  <div class="row list-item" id="media-<%= medias[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(medias[i].id, mediaPath(medias[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= medias[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>