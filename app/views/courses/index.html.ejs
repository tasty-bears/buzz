<div class="hero-unit">
  <h2>All Courses</h2>
  <%- linkTo('Create a new Course', addCoursePath, {class: 'btn pull-right'}); %>
</div>

<div id="courses-list">
<% if (courses) { %>
<% for (var i = 0, ii = courses.length; i < ii; i++) { %>
  <div class="row list-item" id="course-<%= courses[i].id; %>">
    <div class="span8">
      <h3><%- linkTo(courses[i].name, coursePath(courses[i].id)); %></h3>
    </div>
    <div class="span4">
      <h3><i class="icon-list-alt"></i><%= courses[i].id; %></h3>
    </div>
  </div>
<% } %>
<% } %>
</div>