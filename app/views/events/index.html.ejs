<div class="hero-unit">
  <h2>All Events</h2>
  <%- linkTo('Create a new Event', addEventPath, {class: 'btn pull-right'}); %>
</div>

<div id="events-list">
<% if (events) { %>
<% for (var i = 0, ii = events.length; i < ii; i++) { %>
  <div class="row list-item" id="event-<%= events[i].id; %>">
    <div class="span12">
      <h3 class="eventLink"><%- linkTo(events[i].name, eventPath(events[i].id)); %></h3>
      <p class="eventLink"><%- events[i].description; %></p>
    </div>
    <!-- <div class="span4">
      <h3><i class="icon-list-alt"></i><%= events[i].id; %></h3>
    </div> -->
  </div>
<% } %>
<% } %>
</div>