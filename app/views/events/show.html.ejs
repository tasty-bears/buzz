
<div class="hero-unit">
  <h2 class="name"><%- geddy.date.strftime(event.date, "%m/%d") + " - " + event.courseHasName() + " " + event.courseHasNumber() + " - " + event.name; %></h2>
  <%- linkTo('Edit this event', editEventPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', eventPath(''), {class: 'btn pull-right'}); %>
</div>
<h3>Event Description</h3>
<div class="row list-item">
  <div class="span12">  
    <p class="description"><%= event.description %></p>
  </div>
</div>

