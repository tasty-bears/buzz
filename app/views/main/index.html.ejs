<!-- Lets talk about geddy -->
<div class="hero-unit geddy-welcome-box">

  <% if (user) { %>
    <h1 class="profile-header pull-left">
      <% if (user.givenName) { %> <%= user.givenName %><% } %>
    </h1>
    
    <h2> Courses </h2>
    <% if (courses) { %>
    <% for (var i = 0, ii = courses.length; i < ii; i++) { %>
      <div class="row list-item" id="course-<%= courses[i].id; %>">
        <div class="span12">
          <h3><%- linkTo(courses[i].name, coursePath(courses[i].id)); %></h3>
        </div>
      </div>
      <% } %>
    <% } %>

    <h2> Events </h2>
    <% if (events) { %>
    <% for (var i = 0, ii = events.length; i < ii; i++) { %>
      <div class="row list-item" id="event-<%= events[i].id; %>">
        <div class="span12">
          <h3><%- linkTo(events[i].name, coursePath(events[i].id)); %></h3>
        </div>
      </div>
      <% } %>
    <% } %>
    <!-- <p><%- linkTo('See Courses', '/courses', {class: 'btn btn-primary btn-large'}) %></p>
    <p><%- linkTo('See Events', '/events', {class: 'btn btn-primary btn-large'}) %></p> -->

  <% } else { %>
    <h1>Hello, stranger</h1>
    <p>You're not authenticated with this app.</p>
    <p><%- linkTo('Click here to create a user account.', addUserPath) %></p>
    <p><%- linkTo('Click here to log in with Facebook or Twitter.', loginPath) %></p>
  <% } %>
</div>
